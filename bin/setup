#!/usr/bin/env bash
set -euo pipefail

echo "=== Installing dependencies ==="
bundle install

echo ""
echo "=== Preparing database ==="
bin/rails db:prepare

echo ""
echo "=== Clearing logs and temp files ==="
bin/rails log:clear tmp:clear

echo ""
echo "=== Restarting application server ==="
bin/rails restart

echo ""
echo "=== Setup complete ==="
